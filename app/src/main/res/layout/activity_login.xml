<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rel_root"
    android:background="@drawable/background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtwelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="91dp"
        android:gravity="center"
        android:text="Welcome"
        android:textColor="@color/Text"
        android:textSize="35dp" />

    <LinearLayout
        android:id="@+id/lnruser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnlogin"
        android:layout_alignEnd="@+id/lnrpass"
        android:layout_alignRight="@+id/lnrpass"
        android:layout_marginBottom="170dp"
        android:layout_marginLeft="25dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/username"
            android:tint="#979ba0" />

        <EditText
            android:id="@+id/etusername"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@android:color/transparent"
            android:hint="Enter MobileNo"
            android:inputType="number"
            android:maxLength="10"
            android:textColor="@color/Text"
            android:textColorHint="#d4dce7" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/lnruser"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="37dp"
        android:background="#979ba0"
        android:orientation="vertical"></LinearLayout>


    <LinearLayout
        android:id="@+id/lnrpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/lnruser"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="53dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/password"
            android:tint="#979ba0" />

        <EditText
            android:id="@+id/etpassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@android:color/transparent"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:textColor="@color/Text"
            android:textColorHint="#d4dce7" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/lnrpassview"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_below="@+id/lnrpass"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="#979ba0"
        android:orientation="vertical">

    </LinearLayout>

    <Button
        android:id="@+id/btnlogin"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_above="@+id/txtforgot"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:background="@drawable/button"
        android:gravity="center"
        android:text="Log in"
        android:textAllCaps="false"
        android:textColor="@color/Text" />

    <TextView
        android:id="@+id/txtforgot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:text="Forgot password"
        android:textColor="#979ba0" />
</RelativeLayout>

