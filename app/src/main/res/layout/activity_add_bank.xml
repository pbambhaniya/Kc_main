<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_bank"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/bank_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="50dp"
            android:background="@android:color/transparent"
            android:hint="@string/Bank_name"
            android:paddingLeft="14dp"
            android:textColor="@color/Text"
            android:textColorHint="@color/Text"
            android:textSize="18dp" />

        <View
            android:id="@+id/v1"
            style="@style/cus_devider" />

        <EditText
            android:id="@+id/bank_ifsc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:background="@android:color/transparent"
            android:hint="@string/ifsc_code"
            android:paddingLeft="14dp"
            android:textColor="@color/Text"
            android:textColorHint="@color/Text"
            android:textSize="18dp" />

        <View
            android:id="@+id/v2"
            style="@style/cus_devider"
            android:layout_below="@+id/bank_ifsc" />

        <EditText
            android:id="@+id/bank_branch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:background="@android:color/transparent"
            android:hint="@string/branch_name"
            android:paddingLeft="14dp"
            android:textColor="@color/Text"
            android:textColorHint="@color/Text"
            android:textSize="18dp" />

        <View
            android:id="@+id/v3"
            style="@style/cus_devider"
            android:layout_below="@+id/bank_branch" />

        <RelativeLayout
            android:id="@+id/rl_start_dates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v1"
          >

            <RelativeLayout
                android:id="@+id/rel_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_start_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_toLeftOf="@+id/img_start_date"
                    android:background="@android:color/transparent"
                    android:hint="@string/Start_Date"
                    android:paddingLeft="10dp"
                    android:textColor="@color/Text"
                    android:textColorHint="@color/Text"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/img_start_date"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/date" />

            </RelativeLayout>

            <View
                style="@style/cus_devider"
                android:layout_below="@+id/rel_date"
                android:visibility="visible" />

        </RelativeLayout>


        <Button
            android:id="@+id/add_bank"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:background="@drawable/button"
            android:gravity="center"
            android:text="ADD"
            android:textColor="@color/Text"
            android:textSize="18dp" />

        <Button
            android:id="@+id/update_bank"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:background="@drawable/button"
            android:gravity="center"
            android:text="Update"
            android:textColor="@color/Text"
            android:textSize="18dp"
            android:visibility="gone" />
    </LinearLayout>


</RelativeLayout>
