<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_company_master"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:focusableInTouchMode="true">


    <Spinner
        android:id="@+id/sp_pro_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/Text"
        android:gravity="center"
        android:popupBackground="@color/colorPrimary"
        android:textColor="@color/colorPrimary"
        android:theme="@android:style/Theme.Holo.Light.DarkActionBar" />

    <EditText
        android:id="@+id/edit_sd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sp_pro_name"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:hint="@string/SD"
        android:paddingLeft="14dp"
        android:textColor="@color/Text"
        android:textColorHint="@color/Text"
        android:textSize="18dp" />

    <View
        android:id="@+id/v1"
        style="@style/cus_devider"
        android:layout_below="@+id/edit_sd" />


    <EditText
        android:id="@+id/edit_fmg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/v1"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="@android:color/transparent"
        android:hint="@string/FMG"
        android:paddingLeft="14dp"
        android:textColor="@color/Text"
        android:textColorHint="@color/Text"
        android:textSize="18dp" />

    <View
        android:id="@+id/v3"
        style="@style/cus_devider"
        android:layout_below="@+id/edit_fmg" />

    <EditText
        android:id="@+id/edit_tds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/v3"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="@android:color/transparent"
        android:hint="@string/TDS"
        android:paddingLeft="14dp"
        android:textColor="@color/Text"
        android:textColorHint="@color/Text"
        android:textSize="18dp" />

    <View
        android:id="@+id/v4"
        style="@style/cus_devider"
        android:layout_below="@+id/edit_tds" />

    <RelativeLayout
        android:id="@+id/rl_start_dates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v4"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/rel_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_start_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@+id/img_start_date"
                android:background="@android:color/transparent"
                android:hint="@string/Start_Date"
                android:paddingLeft="10dp"
                android:textColor="@color/Text"
                android:textColorHint="@color/Text"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/img_start_date"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/date" />

        </RelativeLayout>

        <View
            style="@style/cus_devider"
            android:layout_below="@+id/rel_date"
            android:visibility="visible" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="17dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_Add_project"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:text="ADD"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <Button
            android:id="@+id/btn_Update_project"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:text="Update"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:visibility="gone" />

    </LinearLayout>


</RelativeLayout>
