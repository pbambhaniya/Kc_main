<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_menu"
    android:focusableInTouchMode="true">


    <ScrollView
        android:layout_above="@+id/lnr_btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Spinner
                android:id="@+id/sp_vehicle_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="50dp"
                android:backgroundTint="@color/Text"
                android:gravity="center"
                android:popupBackground="@color/colorPrimary"
                android:textColor="@color/colorPrimary"
                android:theme="@android:style/Theme.Holo.Light.DarkActionBar" />


            <Spinner
                android:id="@+id/sp_vehicle_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sp_vehicle_type"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/Text"
                android:gravity="center"
                android:popupBackground="@color/colorPrimary"
                android:textColor="@color/colorPrimary"
                android:theme="@android:style/Theme.Holo.Light.DarkActionBar" />

            <Spinner
                android:id="@+id/sp_exp_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sp_vehicle_no"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/Text"
                android:gravity="center"
                android:popupBackground="@color/colorPrimary"
                android:textColor="@color/colorPrimary"
                android:theme="@android:style/Theme.Holo.Light.DarkActionBar" />



            <EditText
                android:id="@+id/et_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sp_exp_type"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:background="@android:color/transparent"
                android:hint="@string/Exp_type"
                android:paddingLeft="10dp"
                android:textColor="@color/Text"
                android:textColorHint="@color/Text"
                android:textSize="18dp" />

            <View
                android:id="@+id/v1"
                style="@style/cus_devider"
                android:layout_below="@id/et_detail" />

            <EditText
                android:id="@+id/et_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v1"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:background="@android:color/transparent"
                android:hint="@string/Amount"
                android:paddingLeft="10dp"
                android:textColor="@color/Text"
                android:textColorHint="@color/Text"
                android:textSize="18dp" />

            <View
                android:id="@+id/v3"
                style="@style/cus_devider"
                android:layout_below="@id/et_amount" />




            <RelativeLayout
                android:id="@+id/rl_start_dates"
                android:layout_width="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v3">

                <RelativeLayout
                    android:id="@+id/rel_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_start_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_toLeftOf="@+id/img_start_date"
                        android:background="@android:color/transparent"
                        android:hint="@string/Start_Date"
                        android:paddingLeft="10dp"
                        android:textColor="@color/Text"
                        android:textColorHint="@color/Text"
                        android:textSize="18dp" />

                    <ImageView
                        android:id="@+id/img_start_date"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/date" />

                </RelativeLayout>

                <View
                    style="@style/cus_devider"
                    android:layout_below="@+id/rel_date"
                    android:visibility="visible" />

            </RelativeLayout>
        </RelativeLayout>

    </ScrollView>


    <LinearLayout
        android:id="@+id/lnr_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="17dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_add"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:text="ADD"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <Button
            android:id="@+id/btn_update"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:text="Update"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:visibility="gone" />

    </LinearLayout>


</RelativeLayout>
