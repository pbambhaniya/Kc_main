<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/list_item_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        card_view:cardBackgroundColor="@color/card_list"
        card_view:cardPreventCornerOverlap="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.multipz.kc.util.CustText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:singleLine="true"
                    android:text="@string/com_name"
                    android:textColor="@color/Text"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/txt_com_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="Company name"
                    android:textColor="@color/Text"
                    android:textSize="16dp" />
            </LinearLayout>

            <View style="@style/cus_deviders" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.multipz.kc.util.CustText

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/Total_remainig_amount"
                    android:textColor="@color/Text"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/txt_total_remaining_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/holo_red_dark"
                    android:gravity="center"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="0"
                    android:textColor="@color/Text"
                    android:textSize="16dp" />
            </LinearLayout>

            <View style="@style/cus_deviders" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.multipz.kc.util.CustText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/Total_got_amount"
                    android:textColor="@color/Text"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/txt_got_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/holo_green_dark"
                    android:gravity="center"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="120"

                    android:textColor="@color/Text"
                    android:textSize="16dp" />
            </LinearLayout>

            <View style="@style/cus_deviders" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.multipz.kc.util.CustText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/ACtual_remaning_amount"
                    android:textColor="@color/Text"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/txt_actual_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="120"
                    android:textColor="@color/Text"
                    android:textSize="16dp" />
            </LinearLayout>


            <View style="@style/cus_deviders" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <Button
                    android:id="@+id/btnRemainingAmt"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:layout_weight="0.5"
                    android:background="@android:color/holo_red_dark"
                    android:gravity="center"
                    android:text="@string/remaing_amount"
                    android:textAllCaps="false"
                    android:textColor="@color/Text"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btnGotAmt"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:layout_weight="0.5"
                    android:background="@android:color/holo_green_dark"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/got_amount"
                    android:textAllCaps="false"
                    android:textColor="@color/Text"
                    android:textSize="16sp" />
            </LinearLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>