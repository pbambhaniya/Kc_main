<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_vehicle_transport"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:focusableInTouchMode="true">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/lnr_btn">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Spinner
                android:id="@+id/sp_company_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="50dp"
                android:backgroundTint="@color/Text"
                android:gravity="center"
                android:popupBackground="@color/colorPrimary"
                android:textColor="@color/colorPrimary"
                android:theme="@android:style/Theme.Holo.Light.DarkActionBar" />


            <Spinner
                android:id="@+id/sp_project_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sp_company_id"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/Text"
                android:gravity="center"
                android:popupBackground="@color/colorPrimary"
                android:textColor="@color/colorPrimary"
                android:theme="@android:style/Theme.Holo.Light.DarkActionBar" />

            <Spinner
                android:id="@+id/sp_material_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sp_project_id"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/Text"
                android:gravity="center"
                android:popupBackground="@color/colorPrimary"
                android:textColor="@color/colorPrimary"
                android:theme="@android:style/Theme.Holo.Light.DarkActionBar" />


            <EditText
                android:id="@+id/edit_challon_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sp_material_id"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:background="@android:color/transparent"
                android:hint="@string/challon_no"
                android:paddingLeft="10dp"
                android:textColor="@color/Text"
                android:textColorHint="@color/Text"
                android:textSize="18dp" />

            <View
                android:id="@+id/v1"
                style="@style/cus_devider"
                android:layout_below="@id/edit_challon_no" />


            <RelativeLayout
                android:id="@+id/challan_img_rel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v1"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp">

                <TextView

                    android:id="@+id/txt_challan"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_marginLeft="18dp"
                    android:gravity="center"
                    android:text="@string/challon_imge"
                    android:textColor="@color/Text"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/challan_img"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="50dp"
                    android:layout_toRightOf="@+id/txt_challan"
                    android:src="@drawable/img" />

            </RelativeLayout>


            <EditText

                android:id="@+id/edit_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/challan_img_rel"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="20dp"
                android:background="@android:color/transparent"
                android:hint="@string/Amount"
                android:inputType="number"
                android:maxLength="10"
                android:paddingLeft="10dp"
                android:textColor="@color/Text"
                android:textColorHint="@color/Text"
                android:textSize="18dp" />

            <View
                android:id="@+id/v2"
                style="@style/cus_devider"
                android:layout_below="@id/edit_amount" />

            <EditText
                android:id="@+id/edit_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v2"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:background="@android:color/transparent"
                android:hint="@string/Amount_detail"
                android:paddingLeft="10dp"
                android:textColor="@color/Text"
                android:textColorHint="@color/Text"
                android:textSize="18dp" />

            <View
                android:id="@+id/v3"
                style="@style/cus_devider"
                android:layout_below="@id/edit_detail"
                android:layout_marginBottom="20dp" />

            <Spinner
                android:id="@+id/sp_weight_unit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edit_detail"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/Text"
                android:gravity="center"
                android:popupBackground="@color/colorPrimary"
                android:textColor="@color/colorPrimary"
                android:theme="@android:style/Theme.Holo.Light.DarkActionBar" />


            <EditText
                android:id="@+id/edit_weight_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sp_weight_unit"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:background="@android:color/transparent"
                android:hint="@string/weight_type"
                android:paddingLeft="10dp"
                android:textColor="@color/Text"
                android:textColorHint="@color/Text"
                android:textSize="18dp" />

            <View
                android:id="@+id/v4"
                style="@style/cus_devider"
                android:layout_below="@id/edit_weight_type"
                android:layout_marginBottom="20dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v4"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edit_price_per_ton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="30dp"
                    android:background="@android:color/transparent"
                    android:hint="@string/price_ton"
                    android:inputType="number"
                    android:paddingLeft="10dp"
                    android:textColor="@color/Text"
                    android:textColorHint="@color/Text"
                    android:textSize="18dp" />

                <View
                    style="@style/cus_devider"
                    android:layout_marginBottom="20dp" />


                <EditText
                    android:id="@+id/edit_total_price_per_ton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="30dp"
                    android:background="@android:color/transparent"
                    android:hint="@string/total_price_ton"
                    android:inputType="number"
                    android:paddingLeft="10dp"
                    android:textColor="@color/Text"
                    android:textColorHint="@color/Text"
                    android:textSize="18dp" />

                <View
                    style="@style/cus_devider"
                    android:layout_marginBottom="20dp" />

                <RelativeLayout
                    android:id="@+id/rl_start_dates"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/v3"
                    android:visibility="visible">

                    <RelativeLayout
                        android:id="@+id/rel_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="30dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_start_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="1dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_toLeftOf="@+id/img_start_date"
                            android:background="@android:color/transparent"
                            android:hint="@string/Start_Date"
                            android:paddingLeft="10dp"
                            android:textColor="@color/Text"
                            android:textColorHint="@color/Text"
                            android:textSize="18dp" />

                        <ImageView
                            android:id="@+id/img_start_date"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="20dp"
                            android:src="@drawable/date" />

                    </RelativeLayout>

                    <View
                        style="@style/cus_devider"
                        android:layout_marginBottom="10dp"
                        android:layout_below="@+id/rel_date"
                        android:visibility="visible" />

                </RelativeLayout>

            </LinearLayout>


        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/lnr_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="17dp"
        android:gravity="center">

        <Button
            android:id="@+id/add_company_master"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:text="ADD"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <Button
            android:id="@+id/update_company_master"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:text="Update"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:visibility="gone" />

    </LinearLayout>


</RelativeLayout>