<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.multipz.kc.Activity.LoadToActivity">


    <ScrollView
        android:layout_above="@+id/lnr_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl_load_dates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edit_deposite"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_load_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_toLeftOf="@+id/img_start_date"
                    android:background="@android:color/transparent"
                    android:hint="@string/Load_date"
                    android:paddingLeft="10dp"
                    android:textColor="@color/Text"
                    android:textColorHint="@color/Text"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/img_start_date"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/date" />

            </RelativeLayout>

            <View
                android:id="@+id/v1"
                style="@style/cus_devider"
                android:layout_below="@+id/rl_load_dates" />


            <Spinner
                android:id="@+id/sp_load_compid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v1"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/white"
                android:gravity="center"
                android:popupBackground="@color/colorPrimary"
                android:textColor="@color/colorPrimary"
                android:theme="@android:style/Theme.Holo.Light.DarkActionBar" />


            <EditText
                android:id="@+id/et_load_challon_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sp_load_compid"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@android:color/transparent"
                android:paddingLeft="10dp"
                android:textColor="@color/Text"
                android:textColorHint="@color/Text"
                android:textSize="18dp" />

            <View
                android:id="@+id/v2"
                style="@style/cus_devider"
                android:layout_below="@+id/et_load_challon_no" />


            <RelativeLayout
                android:id="@+id/challan_img_rel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v2"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/txt_challan"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_marginLeft="18dp"
                    android:gravity="center"
                    android:text="@string/challon_imge"
                    android:textColor="@color/Text"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/challan_img"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="50dp"
                    android:layout_toRightOf="@+id/txt_challan"
                    android:src="@drawable/img" />

            </RelativeLayout>


            <View
                android:id="@+id/v7"
                style="@style/cus_devider"
                android:layout_below="@+id/challan_img_rel" />

            <EditText
                android:id="@+id/et_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v7"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@android:color/transparent"
                android:paddingLeft="10dp"
                android:textColor="@color/Text"
                android:textColorHint="@color/Text"
                android:textSize="18dp" />

            <View
                android:id="@+id/v9"
                style="@style/cus_devider"
                android:layout_below="@+id/et_weight" />


            <EditText
                android:id="@+id/et_load_weight_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v9"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@android:color/transparent"
                android:hint="@string/empty_amount"
                android:paddingLeft="10dp"
                android:textColor="@color/Text"
                android:textColorHint="@color/Text"
                android:textSize="18dp" />

            <View
                android:id="@+id/v10"
                style="@style/cus_devider"
                android:layout_below="@+id/et_load_weight_type" />


            <TextView
                android:id="@+id/et_load_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v10"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@android:color/transparent"
                android:paddingLeft="10dp"
                android:textColor="@color/Text"
                android:textColorHint="@color/Text"
                android:textSize="18dp" />

            <View
                android:id="@+id/v11"
                style="@style/cus_devider"
                android:layout_below="@+id/et_load_amount" />


            <EditText
                android:visibility="gone"
                android:id="@+id/et_load_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v11"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@android:color/transparent"
                android:hint="@string/empty_amount"
                android:paddingLeft="10dp"
                android:textColor="@color/Text"
                android:textColorHint="@color/Text"
                android:textSize="18dp" />

            <View
                android:visibility="gone"
                android:id="@+id/v12"
                style="@style/cus_devider"
                android:layout_below="@+id/et_load_detail" />


        </RelativeLayout>




    </ScrollView>

    <RelativeLayout
        android:id="@+id/lnr_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/add_vehicle"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button"
            android:text="ADD"
            android:textColor="@color/Text"
            android:textSize="18dp"
            android:visibility="visible" />


    </RelativeLayout>



</RelativeLayout>
