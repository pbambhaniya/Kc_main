<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background">


    <Spinner
        android:id="@+id/sp_user_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="30dp"
        android:layout_toLeftOf="@+id/img_clear"
        android:backgroundTint="@color/Text"
        android:gravity="center"
        android:popupBackground="@color/colorPrimary"
        android:textColor="@color/colorPrimary"
        android:theme="@android:style/Theme.Holo.Light.DarkActionBar" />

    <LinearLayout
        android:id="@+id/lnr_sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sp_user_id"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/sp_load_com"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="30dp"
            android:layout_toLeftOf="@+id/img_clear"
            android:layout_weight="1"
            android:backgroundTint="@color/Text"
            android:gravity="center"
            android:popupBackground="@color/colorPrimary"
            android:textColor="@color/colorPrimary"
            android:theme="@android:style/Theme.Holo.Light.DarkActionBar" />

        <Spinner
            android:id="@+id/sp_empty_com"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="30dp"
            android:layout_toLeftOf="@+id/img_clear"
            android:layout_weight="1"
            android:backgroundTint="@color/Text"
            android:gravity="center"
            android:popupBackground="@color/colorPrimary"
            android:textColor="@color/colorPrimary"
            android:theme="@android:style/Theme.Holo.Light.DarkActionBar" />


    </LinearLayout>

    <Spinner
        android:id="@+id/sp_vehicle_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lnr_sp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/Text"
        android:gravity="center"
        android:popupBackground="@color/colorPrimary"
        android:textColor="@color/colorPrimary"
        android:theme="@android:style/Theme.Holo.Light.DarkActionBar" />


    <ImageView
        android:id="@+id/img_clear"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/sp_user_id"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:layout_marginBottom="-8dp"
        android:padding="10dp"
        android:src="@drawable/clear" />


    <LinearLayout
        android:id="@+id/lnr_date"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/sp_vehicle_no"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/txt_start_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.50"
            android:gravity="center"
            android:hint="Start Date"
            android:textColor="@color/Text"
            android:textColorHint="@color/Text"
            android:textSize="18dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/date" />

        <TextView
            android:id="@+id/txt_end_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.50"
            android:gravity="center"
            android:hint="ENd Date"
            android:textColor="@color/Text"
            android:textColorHint="@color/Text"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/date" />


    </LinearLayout>

    <Button
        android:id="@+id/btn_add"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lnr_date"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/button"
        android:text="Send"
        android:textColor="@color/Text" />


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_add"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/Text" />

            <LinearLayout
                android:id="@+id/lnr_headling"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <include
                    android:id="@+id/view_in"
                    layout="@layout/vehicle_transport_report_item" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/Text" />

            <ListView
                android:id="@+id/report_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/Text" />

        </LinearLayout>


    </HorizontalScrollView>


</RelativeLayout>
