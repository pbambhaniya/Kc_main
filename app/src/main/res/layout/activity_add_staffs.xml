<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_menu"
    android:focusableInTouchMode="true">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Spinner
                android:id="@+id/sp_worktype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="50dp"
                android:backgroundTint="@color/white"
                android:gravity="center"
                android:popupBackground="@color/colorPrimary"
                android:textColor="@color/colorPrimary"
                android:theme="@android:style/Theme.Holo.Light.DarkActionBar" />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sp_worktype"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:background="@android:color/transparent"
                android:hint="@string/Staff_name"
                android:paddingLeft="10dp"
                android:textColor="@color/Text"
                android:textColorHint="@color/Text"
                android:textSize="18dp" />

            <View
                android:id="@+id/v1"
                style="@style/cus_devider"
                android:layout_below="@id/et_name" />

            <RelativeLayout
                android:id="@+id/profile_img_rel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v1"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp">

                <TextView

                    android:id="@+id/txt_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_marginLeft="18dp"
                    android:gravity="center"
                    android:text="@string/Profile_img"
                    android:textColor="@color/Text"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/profile_img"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="50dp"
                    android:layout_toRightOf="@+id/txt_profile"
                    android:src="@drawable/img" />

            </RelativeLayout>

            <View
                android:id="@+id/v2"
                style="@style/cus_devider"
                android:layout_below="@id/profile_img_rel" />

            <RelativeLayout
                android:id="@+id/proof_img_rel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_img_rel"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/txt_proof_img"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_marginLeft="18dp"
                    android:gravity="center"
                    android:text="@string/Proof_img"
                    android:textColor="@color/Text"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/proof_img"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="50dp"
                    android:layout_toRightOf="@+id/txt_proof_img"
                    android:src="@drawable/img" />

            </RelativeLayout>

            <View
                android:id="@+id/v3"
                style="@style/cus_devider"
                android:layout_below="@id/proof_img_rel" />

            <EditText
                android:id="@+id/et_mobile_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v3"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:background="@android:color/transparent"
                android:hint="@string/Mobile_no"
                android:inputType="number"
                android:maxLength="10"
                android:paddingLeft="10dp"
                android:textColor="@color/Text"
                android:textColorHint="@color/Text"
                android:textSize="18dp" />

            <View
                android:id="@+id/v4"
                style="@style/cus_devider"
                android:layout_below="@id/et_mobile_no" />


            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v4"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:background="@android:color/transparent"
                android:hint="@string/Password"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:textColor="@color/Text"
                android:textColorHint="@color/Text"
                android:textSize="18dp" />

            <View
                android:id="@+id/v5"
                style="@style/cus_devider"
                android:layout_below="@id/et_password" />

            <Spinner
                android:id="@+id/sp_salary_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v5"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="50dp"
                android:backgroundTint="@color/white"
                android:gravity="center"
                android:popupBackground="@color/colorPrimary"
                android:textColor="@color/colorPrimary"
                android:theme="@android:style/Theme.Holo.Light.DarkActionBar" />

            <LinearLayout
                android:id="@+id/lnr_sallry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sp_salary_type"
                android:orientation="vertical"
                android:visibility="gone">

                <EditText
                    android:id="@+id/et_sallary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/sp_salary_type"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="30dp"
                    android:background="@android:color/transparent"
                    android:hint="પગાર નાખો "
                    android:inputType="number"
                    android:paddingLeft="10dp"
                    android:textColor="@color/Text"
                    android:textColorHint="@color/Text"
                    android:textSize="18dp" />

                <View
                    android:id="@+id/v6"
                    style="@style/cus_devider"
                    android:layout_below="@id/et_sallary" />
            </LinearLayout>


            <RelativeLayout
                android:id="@+id/rl_start_dates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lnr_sallry"
                android:visibility="visible">

                <RelativeLayout
                    android:id="@+id/rel_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_start_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_toLeftOf="@+id/img_start_date"
                        android:background="@android:color/transparent"
                        android:hint="@string/Start_Date"
                        android:paddingLeft="10dp"
                        android:textColor="@color/Text"
                        android:textColorHint="@color/Text"
                        android:textSize="18dp" />

                    <ImageView
                        android:id="@+id/img_start_date"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/date" />

                </RelativeLayout>

                <View
                    android:id="@+id/view"
                    style="@style/cus_devider"
                    android:layout_below="@+id/rel_date"
                    android:visibility="visible" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/lnr_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/rl_start_dates"
                android:layout_margin="20dp"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_add"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/button"
                    android:text="ADD"
                    android:textColor="@color/Text"
                    android:textSize="18dp"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/btn_update"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/button"
                    android:text="Update"
                    android:textColor="@color/Text"
                    android:textSize="18dp"
                    android:visibility="gone" />


            </LinearLayout>


        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
